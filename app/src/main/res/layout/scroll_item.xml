<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dday4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Dday" />

        <TextView
            android:id="@+id/tclass5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/today_notice" />

        <TextView
            android:id="@+id/tclass6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/tclass5" />

        <TextView
            android:id="@+id/tclass7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/tclass6" />

        <TextView
            android:id="@+id/tclass8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/tclass7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="89dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="275dp"
            android:layout_height="92dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/Dday"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dday3" />

        <TextView
            android:id="@+id/dday3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="19dp"
            android:text="D-day"
            android:textColor="@color/textcolor"
            android:textSize="9pt"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toEndOf="@+id/dday2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:text="오늘은"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dday3" />

        <TextView
            android:id="@+id/dday2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="20dp"
            android:text="날짜를 선택하세요"
            android:textColor="@color/textcolor"
            android:textSize="8pt"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toEndOf="@+id/resetButton2" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:text="D-day"
            android:textColor="@color/textcolor"
            android:textSize="9pt"
            app:layout_constraintStart_toEndOf="@+id/dday"
            app:layout_constraintTop_toTopOf="@+id/Dday" />

        <Button
            android:id="@+id/resetButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="#EBEBEB"
            android:text="초기화"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/book"
            app:layout_constraintTop_toTopOf="@+id/Dday" />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:background="@null"
            android:ems="10"
            android:textSize="8pt"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/dday3" />

        <TextView
            android:id="@+id/dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="날짜를 선택하세요"
            android:textColor="@color/textcolor"
            android:textSize="8pt"
            app:layout_constraintStart_toEndOf="@+id/resetButton"
            app:layout_constraintTop_toTopOf="@+id/Dday" />

        <Button
            android:id="@+id/resetButton2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="#EBEBEB"
            android:text="초기화"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toEndOf="@+id/heart" />

        <TextView
            android:id="@+id/today_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:ems="10"
            android:text="오늘의 수업 시간표"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/dday4"
            app:layout_constraintTop_toTopOf="@+id/dday4" />

        <TextView
            android:id="@+id/tclass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/today_notice" />

        <TextView
            android:id="@+id/tclass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/tclass1" />

        <TextView
            android:id="@+id/tclass3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/tclass2" />

        <TextView
            android:id="@+id/tclass4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/dday4"
            app:layout_constraintTop_toBottomOf="@+id/tclass3" />

        <TextView
            android:id="@+id/email"
            android:layout_width="256dp"
            android:layout_height="31dp"
            android:layout_marginBottom="7dp"
            android:text="20184067@naver.com"
            android:textSize="8pt"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="권도형"
            android:textSize="8pt"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.526" />

        <TextView
            android:id="@+id/todaytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="13dp"
            android:text="오늘의 일정"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today" />

        <ImageButton
            android:id="@+id/book"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/Dday"
            app:layout_constraintTop_toTopOf="@+id/Dday"
            app:srcCompat="@drawable/book" />

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toStartOf="@+id/Dday"
            app:srcCompat="@drawable/heart" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>