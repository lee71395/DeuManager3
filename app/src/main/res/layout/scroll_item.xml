<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="89dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="275dp"
            android:layout_height="92dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/colorBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Dday"
            android:layout_width="391dp"
            android:layout_height="122dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round"
            android:backgroundTint="@color/colorBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="322dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_notice">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone" />

                <ImageButton
                    android:id="@+id/map"
                    android:layout_width="174dp"
                    android:layout_height="123dp"
                    android:layout_marginEnd="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/map" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의 일정" />

            <TextView
                android:id="@+id/todaytext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

        </LinearLayout>

        <TextView
            android:id="@+id/dday"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="날짜를 선택하세요"
            android:textColor="@color/textcolor"
            android:textSize="8pt"
            app:layout_constraintStart_toEndOf="@+id/dateButton"
            app:layout_constraintTop_toTopOf="@+id/Dday" />

        <TextView
            android:id="@+id/dday2"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="11dp"
            android:text="날짜를 선택하세요"
            android:textColor="@color/textcolor"
            android:textSize="8pt"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toEndOf="@+id/dateButton2" />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginEnd="84dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="68dp"
            android:background="@null"
            android:ems="10"
            android:textSize="8pt"

            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="12dp"
            android:text="D-day"
            android:textColor="@color/textcolor"
            android:textSize="9pt"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toEndOf="@+id/dday2" />

        <TextView
            android:id="@+id/result"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="D-day"
            android:textColor="@color/textcolor"
            android:textSize="9pt"
            app:layout_constraintStart_toEndOf="@+id/dday"
            app:layout_constraintTop_toTopOf="@+id/Dday" />

        <TextView
            android:id="@+id/today_notice"
            android:layout_width="218dp"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:background="@null"
            android:ems="10"
            android:text="주요정보"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Dday" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="43dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today" />

        <Button
            android:id="@+id/dateButton2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorBackground"
            android:text="계산하기"
            android:textColor="@color/colorAccent"
            android:textSize="6pt"
            app:layout_constraintBottom_toBottomOf="@+id/Dday"
            app:layout_constraintStart_toEndOf="@+id/imageView4" />

        <Button
            android:id="@+id/dateButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorBackground"
            android:text="계산하기"
            android:textColor="@color/colorAccent"
            android:textSize="6pt"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/Dday" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:text="오늘은"
            android:textColor="@color/textcolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/email"
            android:layout_width="256dp"
            android:layout_height="31dp"
            android:layout_marginBottom="7dp"
            android:text="20184067@naver.com"
            android:textSize="8pt"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="권도형"
            android:textSize="8pt"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.526" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>